<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informaci贸n General  </h3>
            
            <div class="campo">
                <label>Titulo</label>
                <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
            </div>

            <div class="campo">
                <label>Empresa</label>
                <input type="text" name="empresa" placeholder="Empresa contrata"  value="{{vacante.empresa}}" required>
            </div>

            <div class="campo">
                <label>Ubicaci贸n</label>
                <input type="text" name="ubicacion" placeholder="Ej: Colombia"  value="{{vacante.ubicacion}}" required>
            </div>

            <div class="campo">
                <label>Salario</label>
                <input type="text" name="salario" placeholder="Ej: 3500 USD"   value="{{vacante.salario}}" required>
            </div>
      
            <div class="campo">
                <label>Contrato</label>
                <Select name="contrato">
                    {{#tipoContrato vacante.contrato}}
                        <option value="" disabled selected>-- Selecciona --</option>
                        <option value="Freelance">Freelance</option>
                        <option value="Tiempo Completo">Tiempo Completo</option>
                        <option value="Medio Tiempo">Medio Tiempo</option>
                        <option value="Por Proyecto">Por Proyecto</option>
                    {{/tipoContrato}}
                </Select>
            </div>
            <h3>Descripci贸n del Puesto</h3>

            <div class="campo descripcion">
                <label>Descripci贸n</label>
                <input type="hidden" id="x"  value="{{{vacante.descripcion}}}" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
            <h3>Conocimientos</h3>

            <ul class="lista-conocimientos">
                {{#seleccionarSkills vacante.skills}}
                {{/seleccionarSkills}}
            </ul>

           <div class="campo centrar-horizontal">
               <input type="hidden" name="skills" id="skills">
               <input type="submit" value="Gaurdar Cambios" class="btn btn-azul">
           </div>

    </form>
</main>